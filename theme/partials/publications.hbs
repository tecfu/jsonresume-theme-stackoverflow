{{#if resume.publications.length}}
<section id="publications" class="section">
  <header>
    <h2 class='section-title'>Publications</h2>
  </header>

  <section>

    {{#each resume.publications}}

    <section class="publication-item">
    <div class="info-container">

      <div class="info-left">
        {{#if summary}}
          {{#if @first}}
          <input id="publication-item-{{@index}}" type="checkbox" class="toggle-item" checked="checked" />
          {{else}}
          <input id="publication-item-{{@index}}" type="checkbox" class="toggle-item" />
          {{/if}}
          <label for="publication-item-{{@index}}"></label>
        {{/if}}

        <header class="clear">
          <div class="header-left">
            {{#if name}}
            <span class="name">
            {{#if website}}
            <span class="website">
            <a target="_blank" href="{{website}}">{{name}}</a>
            </span>
            {{else}}
            {{name}}
            {{/if}}
            </span>
            {{/if}}
            {{#if publisher}}
            <span class="publisher">
            | {{publisher}}
            </span>
            {{/if}}
          </div>
          {{#if releaseDate}}
          <span class="date">
          {{DMY releaseDate}}
          </span>
          {{/if}}
        </header>
        {{#if keywords.length}}
        <ul class="keywords">
          {{#each keywords}}
          <li>{{.}}</li>
          {{/each}}
        </ul>
        {{/if}}

        <div class="item">  
          {{#if summary}}
            <div class="summary">{{paragraphSplit summary}}</div>
          {{/if}}
        </div>
      </div>

      <div class="info-right">
        {{#if image}}
          <image src="{{imageToBase64 image}}")/>
        {{/if}}
      </div>

    </div>
    </section>

    {{/each}}
  </section>
</section>
{{/if}}
