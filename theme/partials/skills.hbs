{{#if resume.skills.length}}
<section id="skills" class="section">
  <header>
    <h2 class='section-title'>Skill Sets</h2>
  </header>
  <section>
    {{#each resume.skills}}
    <div class="item">
      {{#if name}}
      <h3 class="name">
        {{name}}
      </h3>
      {{/if}} {{#if level}}
      <div class="level {{toLowerCase level}}">
        {{#if levelDisplay}}
        <em>{{levelDisplay}}</em>
        {{else}}
        <em>{{level}}</em>
        {{/if}}
        <div class="bar"></div>
      </div>
      {{/if}}
      {{#if keywords.length}}
      <ul class="keywords">
        {{#each keywords}}
        <li>{{.}}</li>
        {{/each}}
      </ul>
      {{/if}}
    </div>
    {{/each}}
  </section>
</section>
{{/if}}
