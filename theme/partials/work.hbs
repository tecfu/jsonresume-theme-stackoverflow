{{#if resume.work.length}}
<section id="work" class="section">
  <header>
    <h2 class='section-title'>Work Experience</h2>
  </header>

  <section>
    {{#each resume.work}}
    <section class="work-item">
      <div class="info-container">
      <div class="info-left">
        {{#if name}}

        {{#if summary}}
        <!--
          {{#if @first}}
          <input id="work-item-{{@index}}" type="checkbox" class="toggle-item" checked="checked" />
          {{else}}
          <input id="work-item-{{@index}}" type="checkbox" class="toggle-item" />
          {{/if}}
        -->
          <input id="work-item-{{@index}}" type="checkbox" class="toggle-item" checked="checked" />

          <label for="work-item-{{@index}}"></label>
        {{/if}}

        <header class="info-container">
          <div class="info-left">
            {{#if position}}
            <div class="position">{{position}}</div>
            {{/if}}
            <div class="company">{{name}}</div>

            {{#if summary}}
            <div class="summary">{{paragraphSplit summary}}</div>
            {{/if}}

            {{#location}}
            <span class="location">
              <span class="fas fa-map-marker-alt"></span>
              {{#if city}}
              <span class="city">{{city}},</span>
              {{/if}}
              {{#if countryCode}}
              <span class="countryCode">({{countryCode}})</span>
              {{/if}}
              {{#if region}}
              <span class="region">{{region}}</span>
              {{/if}}
            </span>
            {{/location}}
            {{#if website}}
            <span class="website">
              <a target="_blank" href="{{website}}">{{website}}</a>
            </span> {{/if}} {{#if keywords.length}}
            <ul class="keywords">
              {{#each keywords}}
              <li>{{.}}</li>
              {{/each}}
            </ul>
            {{/if}}

            <div class="item" id="work-item">
            {{#if highlights.length}}
            <ul class="highlights">
              {{#each highlights}}
                <li>{{paragraphSplit .}}</li>
              {{/each}}
            </ul>
            {{/if}}
            </div>
          </div>
          <div class="date info-right">
            {{#if startDate}}
            <span class="startDate">{{Y startDate}}</span>
            {{/if}}
            {{#if endDate}}
            <span class="endDate">- {{Y endDate}}</span>
            {{else}}
            <span class="endDate">- Current</span>
            {{/if}}
          </div>
        </header>
        {{/if}}
      </div>

      <div class="info-right">
        {{#if image}}
          <image src="{{imageToBase64 image}}")/>
        {{/if}}
      </div>
      </div>
          

    </section>
    {{/each}}
  </section>
</section>
{{/if}}
